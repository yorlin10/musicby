@model musicby.Models.Banda

@{
    ViewData["Title"] = "Agregar Banda";
}

<h2>Agregar</h2>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BandaName" class="control-label"></label>
                <input asp-for="BandaName" class="form-control" />
                <span asp-validation-for="BandaName" class="text-danger"></span>

                <label asp-for="BandaGenero" class="control-label"></label>
                <input asp-for="BandaGenero" class="form-control" />
                <span asp-validation-for="BandaGenero" class="text-danger"></span>


            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-warning"> Regresar</a>
            </div>
        </form>
    </div>
</div>





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }
}